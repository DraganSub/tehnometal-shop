{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client",
      "use": "@vercel/static",
      "build": {
        "env": {
          "CI": "true",
          "REACT_APP_MY_CUSTOM_VARIABLE": "my-custom-value"
        },
        "command": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
